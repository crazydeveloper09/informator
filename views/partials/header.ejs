        <% if(userLanguage === 'pl'){ %>
            <script>
                function zmianaCzasu(){
                    const dzisiaj = new Date();
                    const data = new Date("07/21/2021 16:30:00");
                   
                    var dzien = Math.round(Math.abs(data - dzisiaj) / 86400000) -1;
                    var godzina = Math.round(Math.abs(data - dzisiaj) / (1000 * 60 * 60) % 24);
                    var minuta = Math.round(Math.abs(data - dzisiaj) / (1000 * 60) % 60);
                    var sekunda = Math.round(Math.abs(data - dzisiaj) / (1000) % 60);
                    
                    
        
                    
                    
                    
        
                    document.getElementById("zegar").innerHTML = `${dzien} dni ${godzina} godz. ${minuta}min ${sekunda}s`;
                   
                    setTimeout("zmianaCzasu()", 1000);
                }
            </script>
        <% } else { %>
            <script>
                function zmianaCzasu(){
                    const dzisiaj = new Date();
                    const data = new Date("07/21/2021");
                   
                    const data = new Date("07/21/2021 16:30:00");
                   
                    var dzien = Math.round(Math.abs(data - dzisiaj) / 86400000) -1;
