                    var sekunda = Math.round(Math.abs(data - dzisiaj) / (1000) % 60);
                    
                    
        
                    
                    
                    
        
                    document.getElementById("zegar").innerHTML = `${dzien} days ${godzina}h ${minuta}min ${sekunda}s`;
                   
                    setTimeout("zmianaCzasu()", 1000);
                }
            </script>
        <% } %>
    
