<%- include("../partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12" style="margin-top: 4%">
            <div id="form1">
                <a href="/events">
                    <i class="fas fa-arrow-left"></i>
                    <%= language.__('Wróć do strony z wydarzeniami') %>
                </a>
                <h1 class="login"><%= language.__('Dodaj wydarzenie') %></h1>
                <% if(error.length > 0){ %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                <% if(success.length > 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                <% } %>
                <form action="/events" method="post" id>
                   
                    <label for="username" class="username">
                        <%= language.__('Nazwa wydarzenia po polsku') %>
                        
                    </label>
                    <div class="input-group mb-3">
                        
                        <input type="text" class="form-control" name="name" id="username" placeholder="<%= language.__('Tu wpisz nazwę wydarzenia po polsku') %>" aria-label="Hasło" aria-describedby="basic-addon1">
                    </div>
                    <label for="password" class="username">
                        <%= language.__('Nazwa wydarzenia po angielsku') %>
                        
                    </label>

                    <div class="input-group mb-3">
                        
                        <input type="text" class="form-control" name="nameEn" id="nameEn" placeholder="<%= language.__('Tu wpisz nazwę wydarzenia po angielsku') %>" aria-label="Hasło" aria-describedby="basic-addon1">
                    </div>
                    
                    <label for="password" class="username">
                        <%= language.__('Czas') %>
                        
                    </label>

                    <div class="input-group mb-3">
                        
                        <input type="text" class="form-control" name="time" id="time" placeholder="<%= language.__('Tu wpisz czas rozpoczęcia') %>" aria-label="Hasło" aria-describedby="basic-addon1">
                    </div>
                    <label for="password" class="username">
                        <%= language.__('Opis wydarzenia po polsku') %>
                        
                    </label>

                    <div class="input-group mb-3">
                        <textarea name="description" id="description" placeholder="<%= language.__('Tutaj wpisz opis wydarzenia po polsku') %>" class="form-control"></textarea>
                    </div>
                    <label for="password" class="username">
                        <%= language.__('Opis wydarzenia po angielsku') %>
                        
                    </label>

                    <div class="input-group mb-3">
                        <textarea name="descriptionEn" id="descriptionEn" placeholder="<%= language.__('Tutaj wpisz opis wydarzenia po angielsku') %>" class="form-control"></textarea>
                    </div>
                    
                    <input type="submit" value="<%= language.__('Dodaj wydarzenie') %>" class="btn btn-success button btn-golden">
                   
                </form>
                
            </div>
           
        </div>
        
    </div>
</div>

</body>
</html>