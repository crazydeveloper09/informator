<%- include("partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12" style="margin-top: 8%">
            <div id="form1">
                <a href="/">
                    <i class="fas fa-arrow-left"></i>
                    <%= language.__('Wróć do strony głównej') %>
                </a>
                <h1 class="login"><%= language.__('Rejestracja do panelu administracyjnego') %></h1>
                <% if(error.length > 0){ %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                <% if(success.length > 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                <% } %>
                <form action="/register" method="post" id>
                   
                    <label for="username" class="username">
                        <%= language.__('Nazwa użytkownika') %>
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                              <i class="fas fa-user"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" name="username" id="username" placeholder="<%= language.__('Tu wpisz nazwę użytkownika') %>" aria-label="Hasło" aria-describedby="basic-addon1">
                    </div>
                    <label for="username" class="username">
                        <%= language.__('Imię') %>
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                              <i class="fas fa-user-tag"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" name="name" id="username" placeholder="<%= language.__('Tu wpisz swoje imię') %>" aria-label="Hasło" aria-describedby="basic-addon1">
                    </div>
                    <label for="username" class="username">
                        Email
                        
                    </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                              <i class="fas fa-envelope"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" name="email" id="username" placeholder="<%= language.__('Tu wpisz swój email') %>" aria-label="Hasło" aria-describedby="basic-addon1">
                    </div>
                    <label for="password" class="username">
                        <%= language.__('Hasło') %>
                        
                    </label>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                              <i class="fas fa-lock"></i>
                            </span>
                        </div>
                        <input type="password" class="form-control" name="password" id="password" placeholder="<%= language.__('Tu wpisz hasło') %>" aria-label="Hasło" aria-describedby="basic-addon1">
                    </div>
                    <input type="submit" value="<%= language.__('Zarejestruj się') %>" class="btn btn-success button btn-golden">
                   
                </form>
                
            </div>
           
        </div>
        
    </div>
</div>

</body>
</html>